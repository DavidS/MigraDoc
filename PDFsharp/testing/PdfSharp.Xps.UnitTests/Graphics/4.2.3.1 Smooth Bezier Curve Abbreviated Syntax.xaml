    <Glyphs Fill="#000000" UnicodeString="1" OriginX="238" OriginY="18" FontUri="c:/Windows/Fonts/Verdana.ttf" FontRenderingEmSize="6"  />
    <!-- S2 -->
    <Path Stroke="#AAAAAA" StrokeThickness="1" Data="M 300,80 L 270,160"  />
    <Path Stroke="#0000CC" StrokeThickness="5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M 270,160 L 270,160" />
    <Glyphs Fill="#000000" UnicodeString="S" OriginX="275" OriginY="175" FontUri="c:/Windows/Fonts/Verdana.ttf" FontRenderingEmSize="10"  />
    <Glyphs Fill="#000000" UnicodeString="2" OriginX="283" OriginY="178" FontUri="c:/Windows/Fonts/Verdana.ttf" FontRenderingEmSize="6"  />
    <!-- Inflection -->
    <Path Stroke="#FFFFFF" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M 200,80 L 200,80" />
    <Glyphs Fill="#FFFFFF" UnicodeString="I" OriginX="203" OriginY="90" FontUri="c:/Windows/Fonts/Verdana.ttf" FontRenderingEmSize="10"  />
  </Canvas>
