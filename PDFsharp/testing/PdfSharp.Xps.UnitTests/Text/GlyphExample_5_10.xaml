<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="510" Height="680" Background="White">

  <!-- regular -->
  <Glyphs
    FontUri="c:/Windows/Fonts/Times.ttf"
    FontRenderingEmSize="20"
    OriginX="35"
    OriginY="35"
    UnicodeString="ABCxyz - Regular font..."
    Fill="#009900" />

  <!-- italic -->
  <Glyphs
    FontUri="c:/Windows/Fonts/Times.ttf"
    FontRenderingEmSize="20"
    StyleSimulations="ItalicSimulation"
    OriginX="35"
    OriginY="70"
    UnicodeString="ABCxyz - Simulated italic font..."
    Fill="#009900" />

  <!-- bold -->
  <Glyphs
    FontUri="c:/Windows/Fonts/Times.ttf"
    FontRenderingEmSize="20"
    StyleSimulations="BoldSimulation"
    OriginX="35"
    OriginY="105"
    UnicodeString="ABCxyz - Simulated bold font..."
    Fill="#009900" />

  <!-- bold & italic -->
  <Glyphs
    FontUri="c:/Windows/Fonts/Times.ttf"
    FontRenderingEmSize="20"
    StyleSimulations="BoldItalicSimulation"
    OriginX="35"
    OriginY="140"
    UnicodeString="ABCxyz - Simulated bold italic font..."
    Fill="#009900" />
</Canvas>